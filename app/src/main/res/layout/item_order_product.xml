<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="84dp"
    android:paddingTop="15dp"
    android:paddingLeft="@dimen/padding_left"
    android:background="@color/white"
    android:id="@+id/itemRootView"
    >
    <com.facebook.drawee.view.SimpleDraweeView
        xmlns:fresco="http://schemas.android.com/apk/res-auto"
        android:id="@+id/sdv_product"
        android:layout_width="55dp"
        android:layout_height="55dp"
        fresco:placeholderImageScaleType="focusCrop"
        fresco:placeholderImage="@drawable/placeholder"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/tv_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="单位"
        android:textSize="12sp"
        android:textColor="#2E2E2E"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/padding_right"
        android:layout_alignParentRight="true"/>
    <LinearLayout
        android:id="@+id/ll_count"
        android:layout_toLeftOf="@id/tv_unit"
        android:layout_marginRight="3dp"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible">
        <TextView
            android:id="@+id/tv_old_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:textColor="#999999"
            android:text=" "
            />
        <TextView
            android:id="@+id/tv_now_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginLeft="8dp"
            android:textColor="#2E2E2E"
            android:text=" "
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_weight"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:textSize="12sp"
        android:text="x"
        android:textColor="#2E2E2E"
        android:visibility="invisible"
        android:layout_below="@+id/ll_count"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        />
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" "
        android:textColor="#444444"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@id/ll_count"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@id/sdv_product"
        android:layout_toRightOf="@id/sdv_product"/>
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" "
        android:textColor="#999999"
        android:maxLines="2"
        android:textSize="11sp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/ll_count"
        android:layout_alignLeft="@id/tv_name"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tv_name"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E5E5E5"
        android:layout_marginRight="15dp"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>