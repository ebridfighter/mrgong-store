<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants"
                android:paddingTop="15dp">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:scaleType="centerCrop"
        android:src="@drawable/delivery_message_icon_shop"/>

    <LinearLayout
        android:id="@+id/ll_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/iv_icon"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_icon"
            android:text="SO123450"
            android:textColor="#2E2E2E"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_real_tag"
            android:layout_width="24dp"
            android:layout_height="14dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/receive_circle"
            android:gravity="center"
            android:text="实收"
            android:textColor="#FA5900"
            android:textSize="9sp"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tv_return_tag"
            android:layout_width="18dp"
            android:layout_height="14dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/receive_circle"
            android:gravity="center"
            android:text="退"
            android:textColor="#FA5900"
            android:textSize="9sp"
            android:visibility="visible"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/iv_icon"
        android:layout_marginRight="15dp"
        android:text="待确认"
        android:textColor="#333333"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_order_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_icon"
        android:layout_alignLeft="@id/ll_order"
        android:text="04-29 12:00"
        android:textColor="#999999"
        android:textSize="12sp"/>

    <LinearLayout
        android:id="@+id/ll_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/ll_order"
        android:layout_below="@id/tv_order_time"
        android:layout_marginTop="17dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon1"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/icon_item"/>

            <TextView
                android:id="@+id/countTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/icon1"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@id/icon1"
                android:text="下单商品数量"
                android:textColor="#333333"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/priceLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon2"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/icon_price"/>

            <TextView
                android:id="@+id/moneyTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:text="下单金额"
                android:textColor="#333333"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/ll_info"
        android:layout_marginTop="15dp"
        android:background="#E5E5E5"
        />

    <TextView
        android:id="@+id/doBtn"
        android:layout_width="80dp"
        android:layout_height="28dp"
        android:layout_above="@+id/line"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:background="@drawable/firstpage_do_circle"
        android:gravity="center"
        android:text="点货"
        android:textColor="#333333"
        android:textSize="14sp"/>

    <LinearLayout
        android:id="@+id/arrowArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line"
        android:orientation="vertical">

        <include
            layout="@layout/firstpage_timeline_layout"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/arrowBtn"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@null"
            android:src="@drawable/login_btn_dropdown"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/arrowArea"
        android:background="#F0F0F0"
        />
</RelativeLayout>