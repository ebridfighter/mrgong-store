<?xml version="1.0" encoding="utf-8"?>
<!--购物车dialog-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#f5f5f5">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center_vertical">
        <CheckBox
            android:id="@+id/cb_cart_select_all"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:button="@drawable/product_selector"
            android:layout_marginLeft="10dp"
            android:padding="8dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tv_cart_select_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/textColorThird"
            android:layout_toRightOf="@+id/cb_cart_select_all"
            android:layout_centerVertical="true"
            android:text="全选"/>
        <TextView
            android:id="@+id/tv_cart_del"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:textColor="@color/textColorThird"
            android:text="删除"
            android:paddingRight="15dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|right"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e5e5e5"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <include layout="@layout/view_stick_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:layout_alignTop="@id/rv_cart"
            android:visibility="gone"/>
    </RelativeLayout>

</LinearLayout>